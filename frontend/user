Dashboard.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard - Crime Watch</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">User Dashboard</a>
            <div class="ml-auto">
                <span class="text-white mr-3">Welcome, <span id="userName"></span></span>
                <button onclick="logout()" class="btn btn-danger">Logout</button>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h2>Welcome to Your Dashboard</h2>
                <div id="userInfo" class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Your Profile</h5>
                        <p class="card-text">Email: <span id="userEmail"></span></p>
                        <p class="card-text">Department: <span id="userDepartment"></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Check user session
        function checkUserSession() {
            const userData = JSON.parse(localStorage.getItem('userData'));
            if (!userData || !userData.isLoggedIn) {
                window.location.href = 'loginUser.html';
                return false;
            }
            
            // Update UI with user data
            document.getElementById('userName').textContent = userData.username;
            document.getElementById('userEmail').textContent = userData.email;
            document.getElementById('userDepartment').textContent = userData.department;
            return true;
        }

        // Check session when page loads
        window.onload = function() {
            if (!checkUserSession()) {
                return;
            }
        };

        // Logout function
        function logout() {
            localStorage.removeItem('userData');
            window.location.href = 'loginUser.html';
        }
    </script>
</body>
</html>